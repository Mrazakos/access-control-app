# Copy this file to .env and fill in your actual values

# Development Mode
# Set to 'true' for development (Sepolia testnet), 'false' for production (Ethereum mainnet)
EXPO_PUBLIC_DEV_MODE=true

# API Keys
EXPO_PUBLIC_INFURA_API_KEY=your_infura_api_key_here

# Smart Contract Addresses
# Sepolia testnet contract address (used when DEV_MODE=true)
EXPO_PUBLIC_CONTRACT_ADDRESS_SEPOLIA=your_sepolia_contract_address_here
# Ethereum mainnet contract address (used when DEV_MODE=false)
EXPO_PUBLIC_CONTRACT_ADDRESS_MAINNET=your_mainnet_contract_address_here

# App Configuration
EXPO_PUBLIC_APP_SCHEME=your-app-scheme

# WalletConnect Configuration
EXPO_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here
EXPO_PUBLIC_APP_NAME=your_app_name
EXPO_PUBLIC_APP_DESCRIPTION=your_app_description
EXPO_PUBLIC_APP_URL=https://your-app-url.com

# Lock API Base URL for testing/development
EXPO_PUBLIC_LOCK_API_BASE_URL=http://192.168.1.192:3000/api/v1